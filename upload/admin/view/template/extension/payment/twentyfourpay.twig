{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-pp-express" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-twentyfourpay" class="form-horizontal">


		  <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-vendor">MID</label>
            <div class="col-sm-10">
              <input type="text" name="payment_twentyfourpay_mid" value="{{ payment_twentyfourpay_mid }}" placeholder="MID" id="input-vendor" class="form-control" />
              {% if error_mid %}
              <div class="text-danger">{{ error_mid }}</div>
              {% endif %}
            </div>
          </div>

		  <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-vendor">ESHOP ID</label>
            <div class="col-sm-10">
              <input type="text" name="payment_twentyfourpay_eshopid" value="{{ payment_twentyfourpay_eshopid }}" placeholder="ESHOP ID" id="input-vendor" class="form-control" />
              {% if error_eshop %}
              <div class="text-danger">{{ error_eshop }}</div>
              {% endif %}
            </div>
          </div>


          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-key">KEY</label>
            <div class="col-sm-10">
              <input type="text" name="payment_twentyfourpay_key" value="{{ payment_twentyfourpay_key }}" placeholder="KEY" id="input-key" class="form-control" />
              {% if error_key %}
              <div class="text-danger">{{ error_key }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group ">
            <label class="col-sm-2 control-label" for="payment_twentyfourpay_test">{{ test_param }}</label>
            <div class="col-sm-10">
              <p>
                <input type="hidden" name="payment_twentyfourpay_test" value="0" />
                <input type='checkbox' name='payment_twentyfourpay_test' id="twentyfourpay_payment_type" value='1' {{ payment_twentyfourpay_test is defined and payment_twentyfourpay_test == 1 ? 'checked="checked"' : '' }} /> {{ test_param_on }}
              </p>
            </div>
          </div>

          <div class="form-group ">
            <label class="col-sm-2 control-label" for="payment_twentyfourpay_test">{{debug_param}}</label>
            <div class="col-sm-10">
              <p>
                <input type="hidden" name="payment_twentyfourpay_debug" value="0" />
                <input type='checkbox' name='payment_twentyfourpay_debug' id="twentyfourpay_payment_type" value='1' {{ payment_twentyfourpay_debug is defined and payment_twentyfourpay_debug == 1 ? 'checked="checked"' : '' }} /> {{ debug_param_on }}
              </p>
            </div>
          </div>

          <div class="form-group ">
            <label class="col-sm-2 control-label" for="payment_twentyfourpay_notify">{{ notification_email}}</label>
            <div class="col-sm-10">
              <p>
                <input type="hidden" name="payment_twentyfourpay_notify" value="0" />
                <input type='checkbox' name='payment_twentyfourpay_notify' id="payment_twentyfourpay_notify" value='1' {{ payment_twentyfourpay_notify is defined and payment_twentyfourpay_notify == 1 ? 'checked="checked"' : '' }} /> {{ receive_email }}
              </p>
              <br/>
              <input type="text" name="payment_twentyfourpay_email" value="{{ payment_twentyfourpay_email }}" placeholder="email@email.com" id="input-email" class="form-control" />
              {% if error_email %}
              <div class="text-danger">{{ error_email }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_completed_text }}</label>
            <div class="col-sm-10">
              <select name="payment_twentyfourpay_completed_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_twentyfourpay_completed_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-failed-status">{{ entry_order_status_failed_text }}</label>
            <div class="col-sm-10">
              <select name="payment_twentyfourpay_failed_status_id" id="input-order-failed-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_twentyfourpay_failed_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status_pending_text }}</label>
            <div class="col-sm-10">
              <select name="payment_twentyfourpay_pending_status_id" id="input-order-pending-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_twentyfourpay_pending_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_twentyfourpay_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_twentyfourpay_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_twentyfourpay_status" id="input-status" class="form-control">
                {% if payment_twentyfourpay_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_twentyfourpay_sort_order" value="{{ payment_twentyfourpay_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
        </form>

        {% if payment_twentyfourpay_mid != '' and payment_twentyfourpay_eshopid != '' and payment_twentyfourpay_key != '' %}
        <div style="display:block;padding:30px;">
          <br/><br/>
          <legend>{{ validate_params_title }}</legend>
          <a href="{{ action_call }}" class="btn btn-default" id="twentyfourpay-ajax-call">{{ validate_params }}</a><br/>
          <div style="display:block;margin-top:15px;" id="gateway-out"></div>
          <br/><br/>
        </div>
        <script>
        $(function(){
          $('#twentyfourpay-ajax-call').click(function(event){
            event.preventDefault();
            var url = $(this).attr('href');

            $.get(url,function(data){
              console.log(data);
              $('#gateway-out').empty();
              if (data == "[]")
                $('#gateway-out').html("<div class='alert alert-danger alert-dismissible'><i class='fa fa-times-circle'></i> Na zaklade zadaných parametrov sa nenašli aktívne metódy!</div>");
              else
                $('#gateway-out').html("<div class='alert alert-success alert-dismissible'><i class='fa fa-check-circle'></i> Aktívne metódy: "+data+"</div>");
            });

          });
        });
        </script>

        {% endif %}
      </div>
    </div>
  </div>
</div>
{{ footer }}
